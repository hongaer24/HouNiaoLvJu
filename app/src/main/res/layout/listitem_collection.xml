<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp"
    >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_collection_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/imageview_background_gray"
        />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_collection_img"
        android:layout_toLeftOf="@+id/btn_sc_qx"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_jdname"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505050"
        android:textSize="16sp"
        android:text=""/>

    <Button
        android:id="@+id/btn_sc_qx"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/selector_btn_red"
        android:text="取消"
        android:focusable="false"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/iv_collection_img"
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505050"
        android:textSize="16sp"
        android:text="价格："/>

    <TextView
        android:id="@+id/tv_dayrmb"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/tv_jiage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E75343"
        android:text="¥"
        />

    <TextView
        android:id="@+id/tv_jgday"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/tv_dayrmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E75343"
        android:text=""
        />

    <TextView
        android:id="@+id/tv_mday"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/tv_jgday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E75343"
        android:text="/天"
        />

    <TextView
        android:id="@+id/tv_jgdh"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/tv_mday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#505050"
        android:text="电话："
        />

    <TextView
        android:id="@+id/tv_sc_dh"
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jdname"
        android:layout_toRightOf="@+id/tv_jgdh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E75343"
        android:text=""/>

    <TextView
        android:id="@+id/tv_collection_dz"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jiage"
        android:layout_toRightOf="@+id/iv_collection_img"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505050"
        android:textSize="16sp"
        android:text="地址："/>

    <TextView
        android:singleLine="true"
        android:lines="1"
        android:ellipsize="end"
        android:id="@+id/tv_site"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_jiage"
        android:layout_toRightOf="@+id/tv_collection_dz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E75343"
        android:text=""/>

</RelativeLayout>