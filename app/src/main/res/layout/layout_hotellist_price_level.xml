<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_price_level"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="价格"
            android:textColor="@color/black_txt"
            android:textSize="15sp"/>

        <cn.houno.houniaolvju.view.RadioGroup
            android:id="@+id/rg_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_price0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="不限"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_price1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="0-200"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_price2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="200-300"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_price3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="300-400"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_price4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="400-500"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <RadioButton
                    android:id="@+id/rb_price5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="500以上"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>
            </LinearLayout>
        </cn.houno.houniaolvju.view.RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="星级(多选)"
            android:textColor="@color/black_txt"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_level0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="不限"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <CheckBox
                    android:id="@+id/cb_level1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="二星/经济"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <CheckBox
                    android:id="@+id/cb_level2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="三星/舒适"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_level3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="四星/高档"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <CheckBox
                    android:id="@+id/cb_level4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_corners"
                    android:button="@null"

                    android:gravity="center"
                    android:padding="5dp"
                    android:text="五星/豪华"
                    android:textColor="@color/selector_tab_txt"
                    android:textSize="12sp"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hotel_list_top_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_clear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_corners"
            android:gravity="center"
            android:padding="10dp"
            android:text="清空"
            android:textColor="@color/black_txt"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:background="@drawable/shape_corners_dark_orgs"
            android:gravity="center"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>