<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/rl_type_end"
        android:layout_width="wrap_content"
        android:layout_height="35dp">

        <FrameLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/fl_show_end"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_type_end_acti"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label_order_activity"/>

            <ImageView
                android:id="@+id/iv_type_end_scenic"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label_order_scenic"/>

            <ImageView
                android:id="@+id/iv_type_end_pt"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label_order_pt"/>

            <ImageView
                android:id="@+id/iv_type_end_yy"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label_order_hotel"/>

            <ImageView
                android:id="@+id/iv_type_end_hotel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/label_order_hotel"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_type_end_detail"
            android:layout_toRightOf="@+id/fl_show_end"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_order_end_dai"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#E75343"
            android:textSize="16sp"/>


    </RelativeLayout>

    <View
        android:id="@+id/view_end"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/rl_type_end"
        android:layout_marginTop="2dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_order_end_jd"
        android:layout_marginTop="5dp"
        android:layout_below="@id/view_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#505050"
        android:maxEms="15"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_order_end_room"
        android:layout_below="@id/view_end"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tv_order_end_jd"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#505050"
        android:textSize="16sp"/>



    <RelativeLayout
        android:layout_below="@+id/tv_order_end_jd"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_order_end_img"
            android:layout_width="130dp"
            android:layout_height="90dp"
            android:background="@color/imageview_background_gray"
            />

        <TextView
            android:id="@+id/tv_end_xfzj"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_order_end_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费总价："
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_end_rmb"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_end_xfzj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_order_end_rmb"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_end_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_end_yuan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tv_order_end_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#505050"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/tv_end_rzsc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_order_end_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_order_end_day"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_end_rzsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_end_wan"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_order_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_order_end_ksrz"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_order_end_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_end_zhi"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_order_end_ksrz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textColor="#505050"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_end_ldsj"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_end_zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#505050"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>