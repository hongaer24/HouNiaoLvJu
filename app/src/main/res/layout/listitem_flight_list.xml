<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_deptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="07:35"
        android:textColor="@color/black_txt"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_flight_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_deptime"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_deptime">




        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:src="@drawable/pic_flight_go" />
        <TextView
            android:id="@+id/tv_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:text="停"
            android:textColor="@color/app_theme_green"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_arritime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rl_flight_view"
        android:layout_toRightOf="@+id/rl_flight_view"
        android:padding="5dp"
        android:text="09:35"
        android:textColor="@color/black_txt"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="¥810"
        android:textColor="#f00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_depName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_deptime"
        android:layout_below="@+id/tv_deptime"
        android:paddingLeft="5dp"
        android:text="北京首都机场T3" />

    <TextView
        android:id="@+id/tv_arrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_arritime"
        android:layout_below="@+id/tv_arritime"
        android:layout_toLeftOf="@+id/tv_seat_status"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:text="上海虹桥机场T2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_depName"
        android:layout_below="@+id/tv_depName"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_aviname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="吉祥航空公司HO1252" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/tv_plane_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机型321" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_seat_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_arrname"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:text=""
        android:textColor="#f00"
       />


</RelativeLayout>