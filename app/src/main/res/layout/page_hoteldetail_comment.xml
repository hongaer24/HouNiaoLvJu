<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/cpb_comment"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_vertical"
            app:background_color="@android:color/transparent"
            app:draw_progress_text="true"
            app:progress_background_color="#f4f4f4"
            app:progress_end_color="#fe4e4e"
            app:progress_start_color="#fe4e4e"
            app:progress_stroke_width="3dp"
            app:progress_text_color="#fe4e4e"
            app:progress_text_size="20sp"
            app:style="solid_line" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="好评"
                android:textColor="#Fe4e4e"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="强烈推荐"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/home_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_comment_username"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="旅客"
                android:textColor="@color/black_txt"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_comment_contents"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="希望小伙伴们多多评论，多多支持，谢谢 ^ ^"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_space" />

    <RelativeLayout
        android:id="@+id/rl_comment_total"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_comment_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_comment_more_img"
            android:text="查看全部0条评论"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_comment_more_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/home_space" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/home_space" />

</LinearLayout>