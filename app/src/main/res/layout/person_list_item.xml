<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dip"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dip">

        <Button
            android:id="@+id/person_edit_btn"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_edit"
            android:layout_marginLeft="20dp"
            android:focusable="false" />
        <LinearLayout
            android:id="@+id/ll_count_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/person_edit_btn"
            android:paddingLeft="20dp"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/person_edit_txtv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/address_edit_btn"
                android:text="张三"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dp"
                android:textColor="#212121"
                />
            <TextView
                android:id="@+id/person_edit_txtv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/address_edit_btn"
                android:text="手机：18202020144"
                android:lines="2"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dp"
                />
            <TextView
                android:id="@+id/person_edit_txtv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/address_edit_btn"
                android:text="身份证：460103210090020001"
                android:lines="2"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dp"
                />

        </LinearLayout>
       <!-- <Button
            android:id="@+id/person_edit_btn2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_checkno"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:focusable="false" />-->

        <CheckBox
            android:id="@+id/determine_chekbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:button="@drawable/check_box_bg"
            android:layout_marginRight="10dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center"
            android:minHeight="38dp"
            android:minWidth="32dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />


        </RelativeLayout>




</LinearLayout>