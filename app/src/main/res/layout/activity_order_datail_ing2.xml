<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_theme_green">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订单详情"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_order_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_detail_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_return_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:padding="10dp"
                android:text="已取消"
                android:textColor="@color/orgs_txt"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="16px"
                android:background="#dddddd" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="订单号"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="13dp"
                    android:background="#FFFFFF"
                    android:text="2017122001549800450259"
                    android:textColor="@color/black_txt"
                    android:textSize="16sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20px"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/tv_orderno_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:text="  海口泰迪博物馆"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="海口泰迪熊博物馆提前一小时购买"
                android:textColor="#505050"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="出游时间：2017-12-05"
                android:textColor="#505050"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="门票数量：1张"
                android:textColor="#505050"
                android:textSize="16sp" />

             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/tv_order_price"
                     android:layout_width="wrap_content"
                     android:layout_height="45dp"
                     android:layout_marginLeft="15dp"
                     android:gravity="center_vertical"
                     android:text="订单总额："
                     android:textColor="#606060"
                     android:textSize="16sp" />
                 <TextView
                     android:id="@+id/tv_order_money"
                     android:layout_width="wrap_content"
                     android:layout_height="45dp"
                     android:layout_marginLeft="100dp"
                     android:gravity="center_vertical"
                     android:text="18元"
                     android:textColor="#d27a1c"
                     android:textSize="16sp" />
             </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#dddddd" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="地址"
                android:textColor="#606060"
                android:textSize="16sp" />

         <!--   <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#dddddd" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--     <TextView
                         android:id="@+id/tv_change_refund_rule"
                         android:layout_width="wrap_content"
