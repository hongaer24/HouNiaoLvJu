                         android:text="购票须知"
                         android:textColor="@color/app_theme_green"
                         android:visibility="gone" />-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <cn.houno.houniaolvju.view.Border2TextView
                        android:id="@+id/tv_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:text="立即支付"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="@color/red"
                        app:followTextColor="false"
                        app:strokeColor="#ffdddddd"
                        app:strokeWidth="1.0dip" />

                    <cn.houno.houniaolvju.view.Border2TextView
                        android:id="@+id/tv_order_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="取消订单"
                        android:background="@color/orgs_txt"
                        android:textColor="#fff"
                        android:visibility="gone"
                        app:followTextColor="false"
                        app:strokeColor="#ffdddddd"
                        app:strokeWidth="1.0dip" />

                    <cn.houno.houniaolvju.view.Border2TextView
                        android:id="@+id/tv_return_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10.0dip"
                        android:padding="5dp"
                        android:text="申请退票"
                        android:textColor="#fff"
                        android:visibility="gone"
                        android:background="@color/red"
                        app:followTextColor="false"
                        app:strokeColor="#ffdddddd"
                        app:strokeWidth="1.0dip" />
                </LinearLayout>
            </RelativeLayout>

