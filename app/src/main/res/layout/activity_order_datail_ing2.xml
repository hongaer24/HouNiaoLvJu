                        android:text="退订规则"
                        android:textColor="#505050"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#dddddd" />

                <TextView
                    android:id="@+id/tv_refund_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="本景点预订成功后，不支持退改，敬请谅解"
                    android:textColor="#606060"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="5dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:background="#7bc730" />

                    <TextView
                        android:id="@+id/tv_order_info"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:text="订单信息"
                        android:textColor="#505050"
                        android:textSize="18sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@android:color/darker_gray" />

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <TextView
                         android:id="@+id/tv_order_data"
                         android:layout_width="wrap_content"
                         android:layout_height="45dp"
                         android:layout_marginLeft="15dp"
                         android:gravity="center_vertical"
                         android:text="预定日期"
                         android:textColor="#606060"
                         android:textSize="16sp" />
                     <TextView
                         android:id="@+id/tv_order_date"
                         android:layout_width="wrap_content"
                         android:layout_height="45dp"
                         android:layout_marginLeft="100dp"
                         android:gravity="center_vertical"
                         android:text="2018-2-1"
                         android:textColor="#606060"
                         android:textSize="16sp" />


                 </RelativeLayout>


                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="支付方式   网上支付"
                    android:textColor="#606060"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_custom_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="客服电话   0371-55328666"
                    android:textColor="#606060"
                    android:textSize="16sp" />

            </LinearLayout>
