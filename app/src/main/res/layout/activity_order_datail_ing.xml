            <TextView
                android:id="@+id/tv_order_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="海口泰迪熊博物馆提前一小时购买"
                android:textColor="#505050"
