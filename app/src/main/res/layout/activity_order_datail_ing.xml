                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="预定日期"
                android:textColor="#606060"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tv_pay_way"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="支付方式"
                android:textColor="#606060"
                android:textSize="16sp" />

            <TextView
