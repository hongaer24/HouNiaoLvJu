<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0">

    <RelativeLayout
        android:id="@+id/rl_my_grzx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_theme_green">

        <ImageView
            android:id="@+id/iv_my_toggle"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/icon_home_toggle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人中心"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />

    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_my_grzx"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_my_haed"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@drawable/pic_card_wallet_bg"
                android:clickable="true"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/civ_headview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_my_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#ffffff"
                        android:textSize="17sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#3f000000"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_ye"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tv_ye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="余额"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_sc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tv_sc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="收藏"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_yhq"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tv_yhq"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="优惠券"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_dd"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/tv_dd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="订单"
                            android:textColor="#ffffff"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_order"
                    />

                <TextView
                    android:id="@+id/tv_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/iv_my_order"
                    android:text="订单"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="90dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/rl_my_collection"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_collection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_favor"
                    />

                <TextView
                    android:id="@+id/tv_my_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_collection"
                    android:text="收藏"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="90dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/rl_my_vip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_vip"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_comment"
                    />

                <TextView
                    android:id="@+id/tv_my_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_vip"
                    android:text="旅居卡"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_my_burse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_burse"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_wallet"
                    />

                <TextView
                    android:id="@+id/tv_my_burse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_burse"
                    android:text="我的钱包"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="90dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:id="@+id/rl_my_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_password"
                    />

                <TextView
                    android:id="@+id/tv_my_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_password"
                    android:text="修改密码"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="90dp"
                android:background="@android:color/darker_gray"/>

            <!--编辑资料-->
            <RelativeLayout
                android:id="@+id/rl_my_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_edit_info"
                    />

                <TextView
                    android:id="@+id/tv_my_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_edit"
                    android:text="编辑资料"
                    android:textColor="#707070"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="90dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:id="@+id/rl_my_about"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_about"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_about_us"
                    />

                <TextView
                    android:id="@+id/tv_my_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_about"
                    android:text="关于我们"
                    android:textColor="#606060"
                    android:textSize="16sp"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_my_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_selector"
                android:clickable="true">

                <ImageView
                    android:id="@+id/iv_my_contact"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_call"
                    />

                <TextView
                    android:id="@+id/tv_my_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/iv_my_contact"
                    android:text="联系客服"
                    android:textColor="#606060"
                    android:textSize="16sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_my_contact"
                    android:text="0371-55328666"
                    android:textColor="#606060"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_go"
                    android:tint="#808080"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_my_zx"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_selector"
                android:text="注销"
                android:textColor="#FF0000"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>