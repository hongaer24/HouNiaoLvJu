<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_room_parent_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/imageview_background_gray"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/tv_room_parent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_room_parent_more"
        android:layout_toRightOf="@+id/iv_room_parent_img"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black_txt"
        android:textSize="17sp" />


    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tv_room_parent_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_room_parent_title"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tv_room_parent_price"
        android:layout_toRightOf="@+id/iv_room_parent_img"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="" />


    <TextView
        android:id="@+id/tv_room_parent_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toLeftOf="@+id/iv_room_parent_more"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:textColor="@color/btn_orgs" />

    <ImageView
        android:id="@+id/iv_room_parent_more"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_room_parent_up" />

</RelativeLayout>