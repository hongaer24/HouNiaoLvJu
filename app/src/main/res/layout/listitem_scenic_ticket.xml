<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_ticket_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <!--    <ImageView
                    android:id="@+id/iv_ticket_head"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/icon_ticket_adult"
                    />-->

                <TextView
                    android:id="@+id/tv_ticket_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="珊瑚礁潜水 - 成人票"
                    android:textColor="@color/black_txt"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_label_green"
                    android:text="网上支付"
                    android:textColor="@color/label_dark_green"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_scenic_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_label_red"
                    android:text="今日可预订"
                    android:textColor="@color/label_dark_red"
                    android:textSize="13sp" />

            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_ticket_info"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当天21点前可预订当日票"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_ticket_know"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预订须知>"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_ticket_info"
                    android:textColor="@color/gray"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_ticket_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ll_ticket_book"
                android:padding="15dp"
                android:layout_marginLeft="15dp"
                android:text="￥ 510.00起"
                android:textColor="#ff0000"/>
            <LinearLayout
                android:id="@+id/ll_ticket_book"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_orgs_btn"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_ticket_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/selector_orgs_btn"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="2dp"
                    android:text="预订"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_ticket_payfs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="在线支付"
                    android:textColor="#f66161"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>