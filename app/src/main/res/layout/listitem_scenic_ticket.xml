<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_ticket_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_ticket_price"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ticket_head"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_ticket_adult"
                />

            <TextView
                android:id="@+id/tv_ticket_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="珊瑚礁潜水 - 成人票"
                android:textColor="@color/black_txt"
                android:textSize="16sp"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_ticket_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预订须知>"
            android:textColor="@color/app_light_green"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ticket_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ll_ticket_book"
        android:padding="10dp"
        android:text="￥ 510.00起"
        android:textColor="#ff0000"/>

    <LinearLayout
        android:id="@+id/ll_ticket_book"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        android:background="@drawable/selector_orgs_btn"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/selector_orgs_btn"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:text="预订"
            android:textColor="#ffffff"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_ticket_payfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="在线支付"
            android:textColor="#f66161"
            android:textSize="10sp"/>
    </LinearLayout>
</RelativeLayout>